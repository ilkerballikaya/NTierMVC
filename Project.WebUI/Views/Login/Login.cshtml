@model AppUser
@{
    ViewBag.Title = "Login";
}

<style type="text/css">
    .login-form {
        width: 340px;
        margin: 50px auto;
    }

    .login-form form {
        margin-bottom: 15px;
        background: #f7f7f7;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }

    .login-form h2 {
        margin: 0 0 15px;
    }

    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }

    .btn {
        font-size: 15px;
        font-weight: bold;
    }
</style>

<h2>Login</h2>



<h1 style="color:red"> @ViewBag.KullaniciYok </h1>

<div class="login-form">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {

        <h2 class="text-center">Log in</h2>
        <div class="form-group">
            @Html.TextBoxFor(x => x.UserName, new { type = "text", @class = "form-control", placeholder = "UserName", required = "required" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Password, new { type = "password", @class = "form-control", placeholder = "Password", required = "required" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">LogIn</button>
        </div>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
            <a href="#" class="pull-right">Forgot Password?</a>
        </div>
    }
    <p class="text-center"><a href="#">Create an Account</a></p>
</div>

